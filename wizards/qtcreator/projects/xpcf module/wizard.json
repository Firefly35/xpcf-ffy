{
    "version": 1,
    "supportedProjectTypes": [ "CMakeProjectManager.CMakeProject", "Qbs.QbsProject", "Qt4ProjectManager.Qt4Project" ],
    "id": "R.XPCFModuleLibrary",
    "category": "I.Projects",
    "trDescription": "Creates a simple XPCF C++ template module.",
    "trDisplayName": "XPCF Module template",
    "trDisplayCategory": "Non-Qt Project",
    "icon": "module_thin.png",
    "enabled": "%{JS: [ %{Plugins} ].indexOf('CppEditor') >= 0 && ([ %{Plugins} ].indexOf('QmakeProjectManager') >= 0 || [ %{Plugins} ].indexOf('CMakeProjectManager') >= 0)}",

    "options":
    [
        { "key": "ProjectFile", "value": "%{JS: '%{BuildSystem}' === 'qmake' ? '%{ProFile}' : ('%{BuildSystem}' === 'cmake' ? '%{CMakeFile}' : '%{QbsFile}')}" },
        { "key": "ProFile", "value": "%{JS: Util.fileName('%{ProjectDirectory}/%{ProjectName}', 'pro')}" },
        { "key": "CMakeFile", "value": "%{ProjectDirectory}/CMakeLists.txt" },
        { "key": "CppFileName", "value": "%{JS: '%{ProjectName}' + '_main.' + Util.preferredSuffix('text/x-c++src')}" },
        { "key": "ModuleName", "value": "%{ProjectName}"},
        { "key": "XPCFVersion", "value": "%{JS: Util.fileName(Util.baseName('%{XPCFVersionPath}') , Util.completeSuffix('%{XPCFVersionPath}'))}"},
        { "key": "ModuleNamespace","value": "%{ModuleNamespaceName}" },
        { "key": "remakenLocalRules","value": "%{remakenWizardRules}" }
    ],

    "pages":
    [
        {
            "trDisplayName": "Project Location",
            "trShortTitle": "Location",
            "typeId": "Project"
        },
        {
            "trDisplayName": "Define Build System",
            "trShortTitle": "Build System",
            "typeId": "Fields",
            "enabled": "%{JS: ! %{IsSubproject}}",
            "data":
            [
                {
                    "name": "BuildSystem",
                    "trDisplayName": "Build system:",
                    "type": "ComboBox",
                    "data":
                    {
                        "index": 0,
                        "items":
                        [
                            {
                                "trKey": "qmake",
                                "value": "qmake",
                                "condition": "%{JS: [ %{Plugins} ].indexOf('QmakeProjectManager') >= 0}"
                            },
                            {
                                "trKey": "CMake",
                                "value": "cmake",
                                "condition": "%{JS: [ %{Plugins} ].indexOf('CMakeProjectManager') >= 0}"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "trDisplayName": "Choose XPCF version",
            "trShortTitle": "XPCF Version",
            "typeId": "Fields",
            "enabled": "%{JS: ! %{IsSubproject}}",
            "data":
            [
                {
                    "name": "XPCFVersionPath",
                    "trDisplayName": "XPCF version directory:",
                    "type": "PathChooser",
                    "mandatory": true,
                    "data":
                    {
                    "kind": "existingDirectory",
                    "basePath": "%{InitialPath}/.remaken/packages/",
                    "path": "%{InitialPath}/.remaken/packages/"
                    }
                },
                {
                    "name": "ModuleNamespaceName",
                    "trDisplayName": "Module namespace:",
                    "type": "LineEdit",
                    "mandatory": true,
                    "data":
                    {
                        "trText": "%{ProjectName}",
                        "trDisabledText": "%{ProjectName}"
                    }
                }
            ]
        },
        {
            "trDisplayName": "Remaken rules",
            "trShortTitle": "Remaken rules",
            "typeId": "Fields",
            "enabled": "%{JS: ! %{IsSubproject}}",
            "data":
            [

                {
                    "name": "remakenWizardRules",
                    "trDisplayName": "Remaken rules folder choice:",
                    "type": "ComboBox",
                    "data":
                    {
                        "items": [  { "trKey": "Use rules from '.remaken/rules/qmake' configuration folder in user's $(HOME) / %USERPROFILE% folder", "value": 0 },
                            { "trKey": "Use rules from local 'builddefs/qmake' project sub-folder", "value": 1 } ]
                    }
                },
                {
                    "name": "remakenWizardRulesNoteLabel",
                    "type": "Label",
                    "span": true,
                    "visible": true,
                    "data":
                    {
                        "wordWrap": true,
                        "trText": "IMPORTANT NOTE:\nSelected folder must exists before the module can be built:"
                    }
                },
                {
                    "name": "remakenWizardDefaultRulesLabel",
                    "type": "Label",
                    "span": true,
                    "visible": "%{JS: '%{remakenWizardRules}' === '0'}",
                    "data":
                    {
                        "wordWrap": true,
                        "trText": "=> '.remaken/rules/qmake'  folder should be created when installing remaken application."
                    }
                },
                {
                    "name": "remakenWizardRulesLabel",
                    "type": "Label",
                    "span": true,
                    "visible":  "%{JS: '%{remakenWizardRules}' === '1'}",
                    "data":
                    {
                        "wordWrap": true,
                        "trText": "=> 'builddefs/qmake' local project folder can be created with:"
                    }
                }
                ,
                {
                    "name": "remakenWizardRulesGitLabel",
                    "type": "Label",
                    "span": true,
                    "visible":  "%{JS: '%{remakenWizardRules}' === '1'}",
                    "data":
                    {
                        "wordWrap": true,
                        "trText": "'git submodule add https://github.com/b-com-software-basis/builddefs-qmake.git builddefs/qmake' within the project root folder."
                    }
                }
            ]
        },

        {
            "trDisplayName": "Kit Selection",
            "trShortTitle": "Kits",
            "typeId": "Kits",
            "enabled": "%{JS: ! %{IsSubproject}}",
            "data": { "projectFilePath": "%{ProjectFile}" }
        },
        {
            "trDisplayName": "Project Management",
            "trShortTitle": "Summary",
            "typeId": "Summary"
        }
    ],
    "generators":
    [
        {
            "typeId": "File",
            "data":
            [
                {
                    "source": "module.pro",
                    "target": "%{ProFile}",
                    "openAsProject": true,
                    "condition": "%{JS: '%{BuildSystem}' === 'qmake'}"
                },
                {
                    "source": "remaken-module.pc.in",
                    "target": "%{JS: 'bcom-' + '%{ProjectName}' + '.pc.in'}",
                    "openAsProject": false,
                    "condition": "%{JS: '%{BuildSystem}' === 'qmake'}"
                },
                {
                    "source": "CMakeLists.txt",
                    "openAsProject": false,
                    "condition": "%{JS: '%{BuildSystem}' === 'cmake'}"
                },
                {
                    "source": "module_main.cpp",
                    "target": "%{CppFileName}",
                    "openInEditor": true
                },
                {
                    "source": "module_API.h",
                    "target": "%{ModuleName}API.h",
                    "openInEditor": true
                },
                {
                    "source": "packagedependencies_tmpl.txt",
                    "target": "packagedependencies.txt",
                    "openInEditor": true
                },
                {
                    "source": "git.ignore",
                    "target": ".gitignore",
                    "condition": "%{JS: ! %{IsSubproject} && '%{VersionControl}' === 'G.Git'}"
                }
            ]
        }
    ]
}
